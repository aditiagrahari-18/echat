<header class="navbar navbar-fixed-top navbar-inverse" style="background-color:green">
  <div class="container">
    <% if user_signed_in? %>
    <nav>
    <ul class="nav navbar-nav navbar-left collapse navbar-collapse" >
      <li><%= image_tag(current_user.avatar.url, width: "50",height: "50", class:"profileimg") %></li>
      <li><%= link_to current_user.username, root_path, id: "logo" %></li>
    <% else %>
      <li><%= link_to "E-chat", root_path, id: "logo" %></li>
    <% end %>
  </ul>
</nav>
    <nav>
      <ul class="nav navbar-nav navbar-right collapse navbar-collapse">
        <% if user_signed_in? %>
          <li><%= link_to "Requests", users_index_path, style:"color:white" %></li>
          <li><%= link_to "Settings", edit_user_registration_path(current_user), style:"color:white"  %></li>
          <li>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, style:"color:white" %>
          </li>
        <% else %>
          <li><%= link_to "Register", new_user_registration_path, style:"color:white" %></li>
          <li><%= link_to "Log in", new_user_session_path, style:"color:white" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
